<Window x:Class="library.book"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:library"
        mc:Ignorable="d"
        Title="Adding Book" Height="420" Width="400" FontFamily="Calibri" FontSize="18" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBox x:Name="titleTB" HorizontalAlignment="Center" Height="30" Margin="0,100,0,0" VerticalAlignment="Top" Width="200"/>
        <TextBox x:Name="authorTB" HorizontalAlignment="Center" Height="30" Margin="0,160,0,0" VerticalAlignment="Top" Width="140"/>
        <TextBox x:Name="yearTB" HorizontalAlignment="Center" Height="30" Margin="0,220,0,0" VerticalAlignment="Top" Width="140"/>
        <TextBox x:Name="availTB" HorizontalAlignment="Center" Height="30" Margin="0,280,0,0" VerticalAlignment="Top" Width="140"/>
        <Button Content="ADD" HorizontalAlignment="Center" Margin="0,340,0,0" VerticalAlignment="Top" Width="100" Click="adding"/>
        <Label Content="Adding Book" HorizontalAlignment="Center" Height="40" Margin="0,20,0,0" VerticalAlignment="Top" Width="140" FontSize="25"/>
        <Label Content="Title" HorizontalAlignment="Center" Margin="0,70,0,0" VerticalAlignment="Top" Height="30"/>
        <Label Content="Author" HorizontalAlignment="Center" Margin="0,130,0,0" VerticalAlignment="Top" Height="30"/>
        <Label Content="Publishing year" HorizontalAlignment="Center" Margin="0,190,0,0" VerticalAlignment="Top" Height="30"/>
        <Label Content="Available" HorizontalAlignment="Center" Margin="0,250,0,0" VerticalAlignment="Top" Height="30"/>
    </Grid>
</Window>